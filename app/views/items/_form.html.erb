<%= form_with model: item, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :item_img %>
    <%= f.file_field :item_img, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :weight %><span> (g)</span>
    <%= f.text_field :weight, placeholder: "例）500", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tag_name, "アイテムにタグを追加する場合はこちらに入力" %>
    <% if item.tags %>
      <%= f.text_field :tag_name, value: item.tags.pluck(:tag_name).join(","), class: "form-control tag_form" %>
    <% else %>
      <%= f.text_field :tag_name, class: "form-control tag_form" %>
    <% end %>
  </div>
  <div class="text-center">
    <%= f.submit class: "btn btn-outline-primary" %>
  </div>
<% end %>