<div class="container">
  <h2 class="text-center">アイテム一覧</h2>
  <!--アイテム絞り込みフィールド-->
  <div class="accordion" id="accordionExample">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h5 class="mb-0">
          <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            アイテムの絞り込み
          </button>
        </h5>
      </div>
      <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card-body">
          <%= form_with scope: :search, url: search_items_path, method: :get, local: true do |f| %>
            <div class="custom-control custom-switch">
              <%= f.check_box :only_myitem, {class: "custom-control-input"}, true, false %>
              <%= f.label :only_myitem, "マイアイテムのみ表示する", class: "custom-control-label" %>
            </div>
            <div class="form-group">
              <%= f.search_field :word, class: "form-control"%>
            </div>
            <div class="form-group">
              <%= f.label :min_weight, "最小重量(g)" %>
              <%= f.number_field :min_weight, min: 1, max: 5000 %>
            </div>
            <div class="form-group">
              <%= f.label :max_weight, "最大重量(g)" %>
              <%= f.number_field :max_weight, min: 1, max: 5000 %>
            </div>
            <div class="form-group">
              <%= f.collection_check_boxes :tag_ids, Tag.item_tags, :id, :tag_name %>
            </div>
              <%= f.submit "絞り込み"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'index', items: @items %>
</div>
