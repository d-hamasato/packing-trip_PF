<div class="container page-top">
  <div class="row justify-content-center">
    <div class="col-md-2 ">
      <p>プロフィール</p>
      <%= render 'profile', user: @user %>
      <div class="text-center mt-3">
        <%= link_to "投稿ブログ一覧", blogs_path(user_id: @user), class: "btn btn-block btn-primary" %>
      </div>
    </div>
    <div class="col-md-10">
      <div class="my-items mb-5">
        <div class="d-flex flex-wrap mb-3">
          <h5>マイアイテム</h5>
          <!--items#indexに@userのアイテムのみ表示させるリンク-->
          <span class="ml-3"><%= link_to "一覧", items_path(user_id: @user), class: "btn btn-sm btn-outline-primary" %></span>
        </div>
        <!--アイテム一覧をoverflowを用いて横スクロールで表示-->
        <div class="d-flex flex-row flex-nowrap overflow-auto">
          <% @items.each do |item| %>
            <div class="col-7 col-sm-5 col-md-4 col-lg-3">
              <%= render 'items/card', item: item %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="my-packings">
        <div class="d-flex flex-wrap">
          <h5>マイパッキング</h5>
          <!--packings#indexに@userのパッキングのみ表示させるリンク-->
          <span class="ml-3"><%= link_to "一覧", packings_path(user_id: @user), class: "btn btn-sm btn-outline-primary" %></span>
        </div>
        <div class="d-flex flex-row flex-nowrap overflow-auto">
          <% @packings.each do |packing| %>
            <div class="col-10 col-sm-8 col-md-7 col-lg-7">
              <%= render 'packings/card', packing: packing %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

