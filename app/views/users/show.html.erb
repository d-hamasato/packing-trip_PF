<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-2 ">
      <p>プロフィール</p>
      <div class="profile_img col-9 col-md-12 mx-auto mb-3">
        <!--プロフィール画像が登録されていればその画像、登録されていなければno_imageを表示-->
        <%= render 'profile_img', user: @user %>
      </div>
      <p class="text-center"><%= link_to @user.name, user_path(@user) %></p>
      <p><%= @user.introduction %></p>
      <% if @user == current_user %>
        <div class="d-flex justify-content-center">
          <%= link_to edit_user_path(@user), class: "btn btn-sm btn-success" do %>
            <span>プロフィールの編集 <i class="fas fa-user-edit"></i></span>
          <% end %>
        </div>
      <% end %>
      <% if @user != current_user %>
        <div class="d-flex justify-content-center">
        <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user), method: :delete, class: "btn btn-sm btn-success" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user), method: :post, class: "btn btn-sm btn-success" %>
        <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-10">
      <div class="my-items mb-5">
        <h5>マイアイテム</h5>
        <!--アイテム一覧をoverflowを用いて横スクロールで表示-->
        <div class="d-flex flex-row flex-nowrap overflow-auto">
          <% @items.each do |item| %>
            <div class="col-7 col-sm-5 col-md-4 col-lg-3">
              <%= render 'items/card', item: item %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="my-packings">
        <h5>マイパッキング</h5>
        <div class="d-flex flex-row flex-nowrap overflow-auto">
          <% @packings.each do |packing| %>
            <div class="col-10 col-sm-8 col-md-7 col-lg-7">
              <%= render 'packings/card', packing: packing %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

